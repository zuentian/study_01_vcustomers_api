<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.zuer02.dao.UserDao" >

    <resultMap id="BaseResultMap" type="com.example.zuer02.entity.User" >
        <id column="USER_ID" property="userId" jdbcType="VARCHAR" />
        <result column="USER_NAME" property="userName" jdbcType="VARCHAR" />
        <result column="NUMBER_PHONE" property="numberPhone" jdbcType="VARCHAR" />
        <result column="EMAIL" property="email" jdbcType="VARCHAR" />
        <result column="EDUCATION" property="education" jdbcType="VARCHAR" />
        <result column="GRADUATION_SCHOOL" property="graduationSchool" jdbcType="VARCHAR" />
        <result column="PROFESSION" property="profession" jdbcType="VARCHAR" />
        <result column="PROFILE" property="profile" jdbcType="VARCHAR" />
        <result column="USER_CRT_DATE" property="userCrtDate" jdbcType="VARCHAR" />
        <result column="USER_ALT_DATE" property="userAltDate" jdbcType="VARCHAR" />
    </resultMap>

    <insert id="insertUser" parameterType="com.example.zuer02.entity.User">


        insert into USER_INFO
        (USER_ID,USER_NAME,NUMBER_PHONE,EMAIL,EDUCATION,GRADUATION_SCHOOL,PROFESSION,PROFILE,USER_CRT_DATE)
        values(
        #{userId},
        #{userName},

        #{numberPhone},
        #{email},
        #{education},
        #{graduationSchool},
        #{profession},
        #{profile},
        #{userCrtDate}
        )

    </insert>


    <select id="selectUser" resultMap="BaseResultMap">
        select
        *
        from USER_INFO
    </select>


    <select id="selectUserByPage" resultMap="BaseResultMap">
        select
        *
        from USER_INFO
    </select>

    <select id="selectUserByUserId" parameterType="String" resultMap="BaseResultMap">
        select
        *
        from USER_INFO
        where USER_ID = #{userId}
    </select>

    <delete id="deleteUserByUserId" parameterType="String">
        delete from
        USER_INFO
        where
        USER_ID = #{userId}

    </delete>

    <update id="updateUserByUserId" parameterType="com.example.zuer02.entity.User">
        update USER_INFO
        set
          USER_NAME=#{userName},
          NUMBER_PHONE=#{numberPhone},
          EMAIL=#{email},
          EDUCATION=#{education},
          GRADUATION_SCHOOL=#{graduationSchool},
          PROFESSION=#{profession},
          PROFILE=#{profile},
          USER_ALT_DATE=#{userAltDate}
        where
          USER_ID = #{userId}
    </update>

</mapper>